Subject: [PATCH 05/13] openssl: fix loongarch64 build

---
 elements/components/openssl.bst | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/elements/components/openssl.bst b/elements/components/openssl.bst
index 52a2371ea..e8ea8cce8 100644
--- a/elements/components/openssl.bst
+++ b/elements/components/openssl.bst
@@ -14,7 +14,7 @@ variables:
       openssl-target: linux-generic32
   - target_arch == "arm":
       openssl-target: linux-generic32
-  - target_arch == "riscv64":
+  - (target_arch == "riscv64" or target_arch == "loongarch64"):
       openssl-target: linux-generic64
   - target_arch in ["x86_64", "aarch64", "ppc64le"]:
       arch-conf: enable-ec_nistp_64_gcc_128
